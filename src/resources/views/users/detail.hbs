<header class="header-content">
  <span class="path-title">Dashboard
    <i class="bi bi-chevron-right"></i>
    Members
    <i class="bi bi-chevron-right"></i>
    Details
    <i class="bi bi-chevron-right"></i>
    {{user.fullname}}
  </span>
  <h2 class="name-page">Details</h2>
</header>
<div class="wrapper-content-page">
    <div class="mt-4">
        <h2>Update member</h2>
        <form action="/users/{{user._id}}?_method=PUT" method="POST">
            <div class="form-group mt-3">
                <label>Name</label>
                <input type="text" class="form-control mt-2" value="{{user.username}}" name="username"  >    
            </div>

            <div class="form-group mt-3">
                <label>Password</label>
                <input type="text" class="form-control mt-2" value="{{user.password}}" name="password" >    
            </div>

            <div class="form-group mt-3">
                <label>Fullname</label>
                <input type="text" class="form-control mt-2" value="{{user.fullname}}" name="fullname" >    
            </div>

            <div class="form-group mt-3">
                <label>Image</label>
                <input type="text" class="form-control mt-2" value="{{user.img}}" name="img" >
            </div>

            <div class="form-group mt-3">
                <label>Email</label>
                <input type="email" class="form-control mt-2" value="{{user.email}}" name="email" >    
            </div>

            <div class="form-group mt-3">
                <label>Address</label>
                <input type="text" class="form-control mt-2" value="{{user.address}}" name="address" >    
            </div>

            <div class="form-group mt-3">
                <label>Phone</label>
                <input type="text" class="form-control mt-2" value="{{user.phone}}" name="phone" >    
            </div>

            {{!-- Playlist user --}}
            <div class="container mt-3" style="margin-left: 9px;">
              <label class="lb-checkbox">
                <input type="checkbox" name="checkAll" class="checkbox-all">
                Xóa tất cả
              </label>
              <button type="button" class="btn btn-primary btn-del-table" disabled>Xóa</button>
            </div>
            <table class="table mt-1">
              <thead class="thead-dark">
                <tr>
                  <th scope="col"></th>
                  <th scope="col">#</th>
                  <th scope="col">Image</th>
                  <th scope="col">Name song</th>
                  <th scope="col">National</th>
                  <th scope="col">Singer</th>
                  <th scope="col">Album</th>
                </tr>
              </thead>
              <tbody class="body-songs">
                {{#each songs}}
                  <tr class="table-row">
                      <td class="song-checkbox">
                        <input type="checkbox" class="song-cb" name="checked-song[]">
                      </td>
                      <th scope="row">{{sum @index 1}}</th>
                      <td><img src="{{this.img}}" alt="" srcset=""></td>
                      <td>{{this.name}}</td>
                      <td>{{this.national}}</td>
                      <td>{{this.singer}}</td>
                      <td>{{this.album}}</td>
                      <input type="hidden" name="playlistid[]" value="{{this._id}}">
                  </tr>
                {{/each}}
              </tbody>
            </table>
            <div class="form-group mt-3">
                <label>Danh sách bài hát</label>
                <select class="form-select list-selection">
                    <option selected>Chọn bài hát</option>
                    {{#each allsongs}}
                        <option value="{{this._id}}"
                                data-img="{{this.img}}"
                                data-national="{{this.national}}"
                                data-singer="{{this.singer}}"
                                data-album="{{this.album}}">
                                {{this.name}}
                        </option>
                    {{/each }}
                </select>    
            </div>
            <button type="button" class="mt-3 btn btn-primary btn-add-list-selection">Thêm bài hát</button>
            {{!-- Playlist user --}}

            {{!-- Album user --}}
            <div class="container mt-3" style="margin-left: 9px;">
              <label class="lb-checkbox">
                <input type="checkbox" name="checkAllAlbum" class="checkbox-all-album">
                Xóa tất cả
              </label>
              <button type="button" class="btn btn-primary btn-del-album" disabled>Xóa</button>
            </div>
            <table class="table mt-1 table-album">
              <thead class="thead-dark">
                <tr>
                  <th scope="col"></th>
                  <th scope="col">#</th>
                  <th scope="col">Image</th>
                  <th scope="col">Name</th>
                  <th scope="col">Topic</th>
                  <th scope="col">Description</th>
                </tr>
              </thead>
              <tbody class="body-album">
                {{#each favoriteAlbum}}
                  <tr class="table-row-album">
                      <td class="song-checkbox">
                        <input type="checkbox" class="album-cb" name="checked-album[]">
                      </td>
                      <th scope="row">{{sum @index 1}}</th>
                      <td><img src="{{this.img}}" alt="" srcset=""></td>
                      <td>{{this.name}}</td>
                      <td>{{this.topic}}</td>
                      <td>{{this.description}}</td>
                      <input type="hidden" name="favoriteAlbums[]" value="{{this._id}}">
                  </tr>
                {{/each}}
              </tbody>
            </table>
            <div class="form-group mt-3">
                <label>Danh sách bài hát</label>
                <select class="form-select list-album">
                    <option selected>Chọn album</option>
                    {{#each albums}}
                        <option value="{{this._id}}"
                          data-img="{{this.img}}"
                          data-description="{{this.description}}"
                          data-topic="{{this.topic}}">
                          {{this.name}}
                        </option>
                    {{/each }}
                </select>    
            </div>
            <button type="button" class="mt-3 btn btn-primary btnadd-album">Thêm bài hát</button>
            {{!-- Album user --}}
            
            <div class="form-group mt-3">
                <label>Nghe gần đây</label>
                <input type="text" class="form-control mt-2" value="{{user.recentlyPlayed}}" name="recentlyPlayed">    
            </div>

            <div class="form-group mt-3">
                <label>Lần cuối đăng nhập</label>
                <input type="date" class="form-control mt-2" value="{{user.lastLogin}}" name="lastLogin" >    
            </div>

            <div class="form-group mt-3">
                <label>Lịch sử đăng nhập</label>
                <input type="date" class="form-control mt-2" value="{{user.loginHistory}}" name="loginHistory" >    
            </div>

            <div class="form-group mt-3">
                <label>Chế độ tài khoản</label>
                <input type="text" class="form-control mt-2" value="{{user.subscriptionPlan}}" name="subscriptionPlan" >    
            </div>

            <div class="form-group mt-3">
                <label>Authorization</label>
                <select class="form-select" aria-label="Default select example" name="singer">
                    <option selected>{{user.quyenhan}}</option>
                    <option value="1">Admin</option>
                    <option value="2">Staff</option>
                    <option value="3">Member</option>
                </select>     
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Update members</button>
        </form>
    </div>
</div>

<form method="POST" name="delete-user-form"></form>

<div class="modal fade" id="delete-user-model" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Delete Member</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you want to delete this member!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" id="btn-delete">Delete</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
<script>
  const deleteSong = document.getElementById('delete-user-model')
  const btnDelete = document.getElementById('btn-delete');
  const deleteForm = document.forms['delete-user-form'];

  var songId;
  if (deleteSong) {
    deleteSong.addEventListener('show.bs.modal', event => {
      const button = event.relatedTarget
      songId = button.getAttribute('data-id')
    })
  }
  if(btnDelete){
    btnDelete.addEventListener('click', () => {
      deleteForm.action = '/users/' + songId + '?_method=DELETE';
      deleteForm.submit();
    })
  }
</script>