<header class="header-content">
  <span class="path-title">Dashboard
    <i class="bi bi-chevron-right"></i>
    Members
    <i class="bi bi-chevron-right"></i>
    Create member
  </span>
  <h2 class="name-page">Members</h2>
</header>
<div class="wrapper-content-page">
    <div class="mt-4">
        <h2>Create member</h2>
        <form action="/users/store" method="post">
            <div class="form-group mt-3">
                <label>Name</label>
                <input type="text" class="form-control mt-2" name="username"  placeholder="Username...">    
            </div>
            <div class="form-group mt-3">
                <label>Password</label>
                <input type="text" class="form-control mt-2" name="password" placeholder="Password...">    
            </div>
            <div class="form-group mt-3">
                <label>Fullname</label>
                <input type="text" class="form-control mt-2" name="fullname" placeholder="Fullname...">    
            </div>
            <div class="form-group mt-3">
                <label>Image</label>
                <input type="text" class="form-control mt-2" name="img" placeholder="Link Image...">    
            </div>
            <div class="form-group mt-3">
                <label>Email</label>
                <input type="email" class="form-control mt-2" name="email" placeholder="Email...">    
            </div>
            <div class="form-group mt-3">
                <label>Address</label>
                <input type="text" class="form-control mt-2" name="address" placeholder="Address...">    
            </div>
            <div class="form-group mt-3">
                <label>Phone</label>
                <input type="text" class="form-control mt-2" name="phone" placeholder="Phone...">    
            </div>
            <div class="form-group mt-3">
                <label>Authorization</label>
                <select class="form-select" aria-label="Default select example" name="singer">
                    <option selected>Select authorization</option>
                    <option value="1">Admin</option>
                    <option value="2">Staff</option>
                    <option value="3">Member</option>
                </select>     
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Add new members</button>
        </form>
    </div>
</div>
