<header class="header-content">
  <span class="path-title">Dashboard
    <i class="bi bi-chevron-right"></i>
    Members
  </span>
  <h2 class="name-page">Members</h2>
  <div class="search-members mt-25">
    <div class="search-header">
      <form class="search search-main" action="/users">
        <div class="container_search ">
          <button class="btn_search center">
            <i class="bi bi-search"></i>
          </button>
          <div class="input_warapper">
              <input type="text" name="timkiem" placeholder="Search members...">
          </div>
        </div>
      </form>
    </div>

    <div class="button-active center">
      <button class="export"><i class="bi bi-journal-arrow-down"></i> Export</button>
      <a href="/users/create">
        <button class="add-member btn btn-primary">
          <i class="bi bi-plus"></i>
          Add member
        </button>
      </a>
    </div>
  </div>
</header>
<div class="wrapper-content-page">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Image</th>
        <th scope="col" class="col-2">
            Username 
            <a href="?sort=username&order={{#if (and (eq currentSort 'username') (eq currentOrder 'asc'))}}desc{{else}}asc{{/if}}">
                <i class="bi {{#if (eq currentSort 'username')}}{{#if (eq currentOrder 'asc')}}bi-caret-up-fill{{else}}bi-caret-down-fill{{/if}}{{else}}bi-chevron-expand{{/if}}" 
                style="font-size:12px; color:#000;">
                </i>
            </a>
        </th>
        <th scope="col" class="col-2">
            Fullname 
            <a href="?sort=fullname&order={{#if (and (eq currentSort 'fullname') (eq currentOrder 'asc'))}}desc{{else}}asc{{/if}}">
                <i class="bi {{#if (eq currentSort 'fullname')}}{{#if (eq currentOrder 'asc')}}bi-caret-up-fill{{else}}bi-caret-down-fill{{/if}}{{else}}bi-chevron-expand{{/if}}" 
                style="font-size:12px; color:#000;">
                </i>
            </a>
        </th>
        <th scope="col" class="col-2">
            Email 
            <a href="?sort=email&order={{#if (and (eq currentSort 'email') (eq currentOrder 'asc'))}}desc{{else}}asc{{/if}}">
                <i class="bi {{#if (eq currentSort 'email')}}{{#if (eq currentOrder 'asc')}}bi-caret-up-fill{{else}}bi-caret-down-fill{{/if}}{{else}}bi-chevron-expand{{/if}}" 
                style="font-size:12px; color:#000;">
                </i>
            </a>
        </th>
        <th scope="col" class="col-2">
            Phone 
            <a href="?sort=phone&order={{#if (and (eq currentSort 'phone') (eq currentOrder 'asc'))}}desc{{else}}asc{{/if}}">
                <i class="bi {{#if (eq currentSort 'phone')}}{{#if (eq currentOrder 'asc')}}bi-caret-up-fill{{else}}bi-caret-down-fill{{/if}}{{else}}bi-chevron-expand{{/if}}" 
                style="font-size:12px; color:#000;">
                </i>
            </a>
        </th>
        <th scope="col" class="col-2">
            Address 
            <a href="?sort=address&order={{#if (and (eq currentSort 'address') (eq currentOrder 'asc'))}}desc{{else}}asc{{/if}}">
                <i class="bi {{#if (eq currentSort 'address')}}{{#if (eq currentOrder 'asc')}}bi-caret-up-fill{{else}}bi-caret-down-fill{{/if}}{{else}}bi-chevron-expand{{/if}}" 
                style="font-size:12px; color:#000;">
                </i>
            </a>
        </th>
        <th scope="col">Operation</th>
      </tr>
    </thead>
    <tbody>
      {{#if searchType}}
        {{#each searchUser}}
          <tr>
              <th scope="row">{{sum @index 1}}</th>
              <td class="col">
                <img src="{{this.img}}" alt="">
              </td>
              <td class="col-2">
                {{this.username}}
              </td>
              <td class="col-2">
                {{this.fullname}}
              </td>
              <td class="col-2">
                {{this.email}}
              </td>
              <td class="col">{{this.phone}}</td>
              <td class="col-2">
                {{this.address}}
              </td>
              <td class="ps-4">
                <div class="detail btn-circle btn-tab-js">
                  <i class="bi bi-three-dots"></i>
                  <div class="container_detail tab-js hidden">
                    <ul>
                      <li>
                        <a href="/users/{{this._id}}/edit">
                          <i class="bi bi-pencil-square"></i>
                          <span>Sửa</span>
                        </a>
                      </li>
                      <li>
                        <a href="/users/{{this._id}}/delete" data-bs-toggle="modal" data-id="{{this._id}}" data-bs-target="#delete-user-model">
                          <i class="bi bi-trash"></i>
                          <span>Xóa</span>
                        </a>
                      </li>
                      <li>
                        <a href="/users/{{this._id}}"><i class="bi bi-journal-text"></i><span>Xem chi tiết</span></a>
                      </li>
                    </ul>
                  </div>
                </div>
              </td>
          </tr>
        {{/each}}
      {{else}}
        {{#each userFormat}}
          <tr>
              <th scope="row">{{sum @index 1}}</th>
              <td class="col">
                <img src="{{this.img}}" alt="">
              </td>
              <td class="col-2">
                {{this.username}}
              </td>
              <td class="col-2">
                {{this.fullname}}
              </td>
              <td class="col-2">
                {{this.email}}
              </td>
              <td class="col">{{this.phone}}</td>
              <td class="col-2">
                {{this.address}}
              </td>
              <td class="ps-4">
                <div class="detail btn-circle btn-tab-js">
                  <i class="bi bi-three-dots"></i>
                  <div class="container_detail tab-js hidden">
                    <ul>
                      <li>
                        <a href="/users/{{this._id}}/edit">
                          <i class="bi bi-pencil-square"></i>
                          <span>Sửa</span>
                        </a>
                      </li>
                      <li>
                        <a href="/users/{{this._id}}/delete" data-bs-toggle="modal" data-id="{{this._id}}" data-bs-target="#delete-user-model">
                          <i class="bi bi-trash"></i>
                          <span>Xóa</span>
                        </a>
                      </li>
                      <li>
                        <a href="/users/{{this._id}}"><i class="bi bi-journal-text"></i><span>Xem chi tiết</span></a>
                      </li>
                    </ul>
                  </div>
                </div>
              </td>
          </tr>
        {{/each}}
      {{/if}}
    </tbody>
  </table>
  <div class="page_bar is-center">
    {{#if (gt currentPage 1)}}
    <button class="next previous">
        <a href="?page={{subtract currentPage 1}}" style="color:#292828;">
            <i class="bi bi-chevron-left"></i>
            Previous
        </a>
    </button>
    {{/if}}
    {{#each (range 1 totalPage)}}
    {{#if (eq this ../currentPage)}}
        <button class="number_page active">
        <a href="?page={{this}}">{{this}}</a>
        </button>
    {{else}}
        <button class="number_page">
        <a style="color:#292828;" href="?page={{this}}">{{this}}</a>
        </button>
    {{/if}}
    {{/each}}
    {{#if (gt currentPage 1)}}
    <button class="next previous">
        <a href="?page={{add currentPage 1}}" style="color:#292828;">
            Next
            <i class="bi bi-chevron-right"></i>
        </a>
    </button>
    {{/if}}
  </div>
</div>

<form method="POST" name="delete-user-form"></form>

<div class="modal fade" id="delete-user-model" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Delete Member</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-flex">
        <p>Are you want to delete this member!</p><i class="bi bi-emoji-frown-fill" style="font-size: 2rem; color: red;"></i>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" id="btn-delete">Delete</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
<script>
  const deleteSong = document.getElementById('delete-user-model')
  const btnDelete = document.getElementById('btn-delete');
  const deleteForm = document.forms['delete-user-form'];

  var songId;
  if (deleteSong) {
    deleteSong.addEventListener('show.bs.modal', event => {
      const button = event.relatedTarget
      songId = button.getAttribute('data-id')
    })
  }
  if(btnDelete){
    btnDelete.addEventListener('click', () => {
      deleteForm.action = '/users/' + songId + '?_method=DELETE';
      deleteForm.submit();
    })
  }
</script>