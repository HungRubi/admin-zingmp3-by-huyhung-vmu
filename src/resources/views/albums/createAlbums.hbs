<header class="header-content">
  <span class="path-title">Dashboard
    <i class="bi bi-chevron-right"></i>
    Albums
    <i class="bi bi-chevron-right"></i>
    Create albums
  </span>
  <h2 class="name-page">Albums</h2>
</header>
<div class="wrapper-content-page">
    <div class="mt-4">
        <h2>Create albums</h2>
        <form action="/albums/store" method="post">
            <div class="form-group mt-3">
                <label>Name</label>
                <input type="text" class="form-control mt-2" name="name"  placeholder="Name album...">    
            </div>
            <div class="form-group mt-3">
                <label>Description</label>
                <textarea class="form-control mt-2" name="description" placeholder="Description..."></textarea>               </div>
            <div class="form-group mt-3">
                <label>Image</label>
                <input type="text" class="form-control mt-2" name="img" placeholder="Link image...">    
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Add new albums</button>
        </form>
    </div>
</div>
