<header class="header-content">
  <span class="path-title">Dashboard
    <i class="bi bi-chevron-right"></i>
    Albums
    <i class="bi bi-chevron-right"></i>
    Update albums
  </span>
  <h2 class="name-page">Albums</h2>
</header>
<div class="wrapper-content-page">
    <div class="mt-4">
        <h2>Update Albums</h2>
        <form action="/albums/{{album._id}}?_method=PUT" method="POST">
            <div class="form-group mt-3">
                <label>Name</label>
                <input type="text" class="form-control mt-2" name="name"  value="{{album.name}}">    
            </div>
            <div class="form-group mt-3">
                <label>Image</label>
                <input type="text" class="form-control mt-2" name="img" value="{{album.img}}">    
            </div>
            <div class="form-group mt-3">
                <label>Topic</label>
                <select class="form-select" aria-label="Default select example" name="topic">
                    <option selected>{{album.topic}}</option>
                    {{#each topic}}
                        <option value="{{this.name}}">{{this.name}}</option>
                    {{/each }}
                </select>    
            </div>
            <div class="form-group mt-3">
                <label>Description</label>
                <textarea class="form-control mt-2" name="description">{{album.description}}</textarea>              
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Update album</button>
        </form>
    </div>
</div>
