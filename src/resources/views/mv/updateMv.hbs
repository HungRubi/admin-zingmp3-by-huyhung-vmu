<header class="header-content">
  <span class="path-title">Dashboard
    <i class="bi bi-chevron-right"></i>
    MV
    <i class="bi bi-chevron-right"></i>
    Update MV
  </span>
  <h2 class="name-page">MV</h2>
</header>
<div class="wrapper-content-page">
    <div class="mt-4">
        <h2>Update MV</h2>
        <form action="/mv/{{mv._id}}?_method=PUT" method="POST">
            <div class="form-group mt-3">
                <label>Name</label>
                <input type="text" class="form-control mt-2" name="name"  value="{{mv.name}}">    
            </div>
            <div class="form-group mt-3">
                <label>Image</label>
                <input type="text" class="form-control mt-2" name="img" value="{{mv.img}}">    
            </div>
             <div class="form-group mt-3">
                <label>Video</label>
                <input type="text" class="form-control mt-2" name="video" value="{{mv.video}}">    
            </div>
            <div class="form-group mt-3">
                <label>Topic</label>
                <select class="form-select" aria-label="Default select example" name="singer">
                    <option selected>{{mv.singer}}</option>
                    {{#each singer}}
                        <option value="{{this.stagename}}">{{this.stagename}}</option>
                    {{/each }}
                </select>    
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Update album</button>
        </form>
    </div>
</div>
