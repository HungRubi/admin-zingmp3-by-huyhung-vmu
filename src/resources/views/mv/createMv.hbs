<header class="header-content">
  <span class="path-title">Dashboard
    <i class="bi bi-chevron-right"></i>
    MV
    <i class="bi bi-chevron-right"></i>
    Create MV
  </span>
  <h2 class="name-page">MV</h2>
</header>
<div class="wrapper-content-page">
    <div class="mt-4">
        <h2>Create MV</h2>
        <form action="/mv/store" method="post">
            <div class="form-group mt-3">
                <label>Name</label>
                <input type="text" class="form-control mt-2" name="name"  placeholder="Name mv...">    
            </div>
            <div class="form-group mt-3">
                <label>Image</label>
                <input type="text" class="form-control mt-2" name="img" placeholder="Link image...">    
            </div>
            <div class="form-group mt-3">
                <label>Singer</label>
                <select class="form-select" aria-label="Default select example" name="singer">
                    <option selected>Ch·ªçn singer</option>
                    {{#each singer}}
                        <option value="{{this.stagename}}">{{this.stagename}}</option>
                    {{/each }}
                </select>    
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Add new albums</button>
        </form>
    </div>
</div>
