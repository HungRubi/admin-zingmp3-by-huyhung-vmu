<header class="header-content">
  <span class="path-title">Dashboard
    <i class="bi bi-chevron-right"></i>
    Singers
    <i class="bi bi-chevron-right"></i>
    Update singer
  </span>
  <h2 class="name-page">Singer</h2>
</header>
<div class="wrapper-content-page">
    <div class="mt-4">
        <h2>Update singer</h2>
        <form action="/singers/{{singer._id}}?_method=PUT" method="POST">
            <div class="form-group mt-3">
                <label>Name</label>
                <input type="text" class="form-control mt-2" name="name" value="{{singer.name}}" placeholder="Full name...">    
            </div>
            <div class="form-group mt-3">
                <label>Description</label>
                <textarea name="description" class="form-control mt-2">{{singer.description}}</textarea>    
            </div>
            <div class="form-group mt-3">
                <label>Image</label>
                <input type="text" class="form-control mt-2" name="img" value="{{singer.img}}" placeholder="Link Image...">    
            </div>
            <div class="form-group mt-3">
                <label>Birth</label>
                <input type="date" class="form-control mt-2" name="birth" value="{{singer.birth}}" placeholder="Birth...">
            </div>
            <div class="form-group mt-3">
                <label>Stagename</label>
                <input type="text" class="form-control mt-2" name="stagename" value="{{singer.stagename}}" placeholder="Stagename...">    
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Update topic</button>
        </form>
    </div>
</div>
