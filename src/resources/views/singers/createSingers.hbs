<header class="header-content">
  <span class="path-title">Dashboard
    <i class="bi bi-chevron-right"></i>
    Singers
    <i class="bi bi-chevron-right"></i>
    Create singer
  </span>
  <h2 class="name-page">Singers</h2>
</header>
<div class="wrapper-content-page">
    <div class="mt-4">
        <h2>Create singer</h2>
        <form action="/singers/store" method="post">
            <div class="form-group mt-3">
                <label>Name</label>
                <input type="text" class="form-control mt-2" name="name"  placeholder="Full name...">    
            </div>
            <div class="form-group mt-3">
                <label>Description</label>
                <textarea name="description" class="form-control mt-2" rows="6"></textarea>    
            </div>
            <div class="form-group mt-3">
                <label>Image</label>
                <input type="text" class="form-control mt-2" name="img" placeholder="Link Image...">    
            </div>
            <div class="form-group mt-3">
                <label>Image Infor</label>
                <input type="text" class="form-control mt-2" name="imginfor" placeholder="Link Image...">    
            </div>
            <div class="form-group mt-3">
                <label>Birth</label>
                <input type="date" class="form-control mt-2" name="birth" placeholder="Birth...">
            </div>
            <div class="form-group mt-3">
                <label>Stagename</label>
                <input type="text" class="form-control mt-2" name="stagename" placeholder="Stagename...">    
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Add new singers</button>
        </form>
    </div>
</div>
