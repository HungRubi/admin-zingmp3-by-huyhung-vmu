<header class="header-content">
  <span class="path-title">Dashboard
    <i class="bi bi-chevron-right"></i>
    Songs
    <i class="bi bi-chevron-right"></i>
    Create song
  </span>
  <h2 class="name-page">Songs</h2>
</header>
<div class="wrapper-content-page">
    <div class="mt-4">
        <h2>Create song</h2>
        <form action="/songs/store" method="post">
            <div class="form-group mt-3">
                <label>Name</label>
                <input type="text" class="form-control mt-2" name="name"  placeholder="Name...">    
            </div>
            <div class="form-group mt-3">
                <label>Image</label>
                <input type="text" class="form-control mt-2" name="img" placeholder="Link...">    
            </div>
            <div class="form-group mt-3">
                <label>National</label>
                <select class="form-select" aria-label="Default select example" name="national">
                    <option selected>Select National</option>
                    <option value="Việt Nam">Việt Nam</option>
                    <option value="Quốc Tế">Quốc Tế</option>
                    <option value="Tàu Khựa">Tàu Khựa</option>
                </select>    
            </div>
            <div class="form-group mt-3">
                <label>Singers</label>
                <select class="form-select" aria-label="Default select example" name="singer">
                    <option selected>Select Singer</option>
                    {{#each singers}}
                        <option value="{{this.stagename}}">{{this.stagename}}</option>
                    {{/each }}
                </select>    
            </div>
            <div class="form-group mt-3">
                <label>Albums</label>
                <select class="form-select" aria-label="Default select example" name="album">
                    <option selected>Select Albums</option>
                    {{#each albums}}
                        <option value="{{this.name}}">{{this.name}}</option>
                    {{/each }}
                </select>    
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Add new song</button>
        </form>
    </div>
</div>
