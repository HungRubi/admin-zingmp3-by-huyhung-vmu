<header class="header-content">
  <span class="path-title">Dashboard
    <i class="bi bi-chevron-right"></i>
    Topic
    <i class="bi bi-chevron-right"></i>
    Update topic
  </span>
  <h2 class="name-page">Topic</h2>
</header>
<div class="wrapper-content-page">
    <div class="mt-4">
        <h2>Create Topic</h2>
        <form action="/topic/{{topic._id}}?_method=PUT" method="POST">
            <div class="form-group mt-3">
                <label>Name</label>
                <input type="text" class="form-control mt-2" name="name"  value="{{topic.name}}">    
            </div>
            <div class="form-group mt-3">
                <label>Title</label>
                <textarea class="form-control mt-2" name="title">{{topic.title}}</textarea>
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Update topic</button>
        </form>
    </div>
</div>
