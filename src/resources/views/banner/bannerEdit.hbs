<header class="header-content">
  <span class="path-title">Dashboard
    <i class="bi bi-chevron-right"></i>
    Banner
    <i class="bi bi-chevron-right"></i>
    Banner Edit
  </span>
  <h2 class="name-page">Banner</h2>
</header>
<div class="wrapper-content-page">
    <div class="mt-4">
        <h2>Edit Banner</h2>
        <form action="/banner/{{banner._id}}?_method=PUT" method="post">
            <select 
                class="form-select mt-2 list_products" 
                name="songs_id"
            >
                <option>{{song.name}}</option>
                {{#each songs}}
                    <option 
                        data-name="{{this.name}}" 
                        value="{{this._id}}" 
                    >
                        {{this.name}}
                    </option>
                {{/each}}
            </select>
            <div class="form-group mt-3">
                <label>Name</label>
                <input 
                    type="text" 
                    class="form-control mt-2" 
                    name="name" 
                    placeholder="Name"
                    value="{{banner.name}}"
                >    
            </div>
            <div class="form-group mt-3">
                <label>Thumbnail</label>
                <input 
                    type="text" 
                    class="form-control mt-2" 
                    name="thumbnail" 
                    placeholder="Link thumbnail..."
                    value={{banner.thumbnail}}
                >    
            </div>
            <button type="submit" class="mt-3 btn btn-primary">
                Add new albums
            </button>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const selectElement = document.querySelector(".list_products");
        const inputElement = document.querySelector('input[name="name"]');

        selectElement.addEventListener("change", function () {
            const selectedOption = selectElement.options[selectElement.selectedIndex];
            
            const songName = selectedOption.getAttribute("data-name");

            if (songName) {
                inputElement.value = songName;
            }
        });
    });

</script>
